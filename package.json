{
  "name": "olyx",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "^17.2.2",
      "zod": "^4.1.13",
      "typescript": "^5"
    }
  },
  "type": "module",
  "scripts": {
    "check": "biome check --write .",
    "clean": "rm -rf node_modules && rm -rf .turbo && rm -rf .next && rm -rf .source",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev"
  },
  "dependencies": {
    "dotenv": "catalog:",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "turbo": "^2.6.3",
    "@biomejs/biome": "^2.3.10",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "typescript": "catalog:"
  },
  "lint-staged": {
    "*.{js,ts,cjs,mjs,d.cts,d.mts,jsx,tsx,json,jsonc}": [
      "biome check --write ."
    ]
  },
  "packageManager": "bun@1.3.4"
}
